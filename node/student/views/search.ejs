<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <h1>查询学生</h1>
    <label for="searchContent">
        学生信息:<input type="text" id="searchContent" name="searchContent">
    </label>
    <input type="button" value="查询" id="search"><br/>
    <ul>
        <% for(let i=0;i<result.length;i++){ %>
        <li>姓名:<%= result[i].name %> 学号:<%= result[i].studentId %></li>
        <% } %>
    </ul>
    <script src="/javascripts/jquery-3.2.1.min.js"></script>
    <script>
        $(document).ready(function(){
            $("#search").click(function(){
                let sc = $("#searchContent").val();
                $.ajax({
                    type: 'POST',
                    url: 'http://127.0.0.1:3000/search',
                    data: 'searchContent='+sc,
                    async: true,
                    dataType: 'html',
                    error: function(obj,err){
                        console.log('请求失败');
                        console.log("err:"+err);
                    },
                    success: function(data){
                        console.log("请求成功!");
                        console.log(data);
                        document.write(data);
                        document.close();
                    }
                })
            })
        })
    </script>
  </body>
</html>