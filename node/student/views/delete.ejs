<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <h1>班级成员信息</h1>
    <ul>
        <% for(let i=0;i<result.length;i++){ %>
        <li>姓名:<%= result[i].name %> 学号:<%= result[i].studentId %><a href="###">点击删除</a></li>
        <% } %>
    </ul>
    <a href="/">返回首页</a>
    <script src="/javascripts/jquery-3.2.1.min.js"></script>
    <script>
      $(document).ready(function(){
        $('li a').click(function(){
          $(this).parent().hide();
          idx = $(this).parent().index();
          idx = idx.toString();
          console.log(typeof idx);
          $.ajax({
            type: 'POST',
            url: '/delete',
            data: "idx="+idx,
            async: true,
            error: function(obj,err){
              console.log('请求失败!');
              console.log('err:'+err);
            },
            success: function(data){
              console.log('请求成功!');
              console.log(data);
            }
          })
        })
      })
    </script>
  </body>
</html>
